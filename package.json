{
  "name": "sovereigncv",
  "version": "0.1.0",
  "private": true,
  "description": "SovereignCV scaffold for Flare + Plasma + ZK verification",
  "workspaces": [
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "build:contracts": "hardhat compile",
    "test:contracts": "hardhat test",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network coston2",
    "zk:inputs": "node scripts/zk/generate-inputs.js",
    "zk:inputs:real": "node scripts/zk/generate-inputs-real.js",
    "zk:build": "node scripts/zk/build-artifacts.js",
    "zk:prove": "node scripts/zk/generate-proof.js --input circuits/inputs/valid.json --out circuits/vectors/valid",
    "zk:check": "node scripts/zk/check-vectors.js",
    "zk:all": "npm run zk:inputs && npm run zk:build && npm run zk:check",
    "start:fdc": "npm run dev --workspace services/fdc",
    "start:plasma": "npm run dev --workspace services/plasma",
    "start:facts": "npm run dev --workspace services/facts",
    "start:ui": "npm run dev --workspace apps/recruiter-ui"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@types/node": "^22.10.1",
    "circom2": "^0.2.22",
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "dotenv": "^16.4.7",
    "hardhat": "^2.22.17",
    "snarkjs": "^0.7.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.1.0",
    "ethers": "^6.13.4"
  }
}
